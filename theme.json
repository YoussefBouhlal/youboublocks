{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 2,
    "settings": {
        "appearanceTools": true,
		"color": {
			"defaultDuotone": false,
			"defaultPalette": false,
			"defaultGradients": false,
			"palette": [
				{
					"color": "#333333",
					"name": "Heading",
					"slug": "heading"
				},
				{
					"color": "#635D53",
					"name": "Text",
					"slug": "text"
				},
                {
					"color": "#9E9E9E",
					"name": "Text Hover",
					"slug": "text-hover"
				},
				{
					"color": "#8E8E8E",
					"name": "Meta",
					"slug": "meta"
				},
				{
					"color": "#23B4E5",
					"name": "Link",
					"slug": "link"
				},
				{
					"color": "#292929",
					"name": "Dark Background",
					"slug": "dark-bg"
				},
				{
					"color": "#E9E9e9",
					"name": "Light Background",
					"slug": "light-bg"
				},
				{
					"color": "#FFFFFF",
					"name": "White",
					"slug": "white"
				}
			]
		},
        "layout": {
			"contentSize": "800px",
			"wideSize": "1200px"
		},
        "spacing": {
            "padding": false,
            "margin": false,
            "blockGap": null
		},
        "typography": {
            "fluid": true,
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system, \"system-ui\", \"Segoe UI\", Roboto, Oxygen-Sans, Ubuntu, Cantarell, \"Helvetica Neue\", sans-serif",
					"name": "System",
					"slug": "system"
                }
            ],
            "fontSizes": [
                {
					"fluid": false,
					"name": "P",
					"size": "1rem",
					"slug": "p"
				},
                {
					"fluid": false,
					"name": "H3",
					"size": "1rem",
					"slug": "h3"
				},
                {
					"fluid": false,
					"name": "H2",
					"size": "1.684rem",
					"slug": "h2"
				},
                {
					"fluid": {
						"min": "1.789rem",
						"max": "2.632rem"
					},
					"name": "H1",
					"size": "2.632rem",
					"slug": "h1"
				}
            ]
        }
    },
    "styles": {
        "color": {
            "background": "var(--wp--preset--color--white)",
            "text": "var(--wp--preset--color--text)"
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--system)",
            "fontSize": "19px",
            "fontStyle": "normal",
            "fontWeight": "400",
            "lineHeight": "1.8"
        },
        "spacing": {
            "padding": {
                "top": "20px",
                "right": "20px",
                "left": "20px"
            }
        },
        "blocks": {
            "core/navigation-link": {
                "spacing": {
                    "margin": {
                        "top": "0.368rem",
                        "bottom": "0.368rem",
                        "left": "1.053rem",
                        "right": "1.053rem"
                    },
                    "padding": {
                        "top": "0.263",
                        "bottom": "0.263",
                        "left": "0.263",
                        "right": "0.263"
                    }
                },
                "css": ":hover { color: var(--wp--preset--color--text-hover) }"
            },
            "core/paragraph": {
                "spacing": {
                    "margin": {
                        "top": "2.632rem",
                        "bottom": "2.632rem"
                    }
                }
            },
            "core/post-title": {
                "color": {
                    "text": "var(--wp--preset--color--heading)"
                },
                "elements": {
                    "link": {
                        "color": {
                            "text": "var(--wp--preset--color--heading)"
                        }
                    }
                }
            },
            "core/post-date": {
                "color": {
                    "text": "var(--wp--preset--color--meta)"
                }
            },
            "core/image": {
                "spacing": {
                    "margin": {
                        "top": "1.842rem",
                        "bottom": "1.842rem"
                    }
                },
                "border": {
                    "radius": "10px"
                },
                "shadow": "0 0 0 1px rgb(239 239 239)"
            }
        },
        "elements": {
            "heading": {
                "color": {
                    "text": "var(--wp--preset--color--heading)"
                },
                "typography": {
                    "lineHeight": "1.4",
                    "fontWeight": "500"
                },
                "spacing": {
                    "margin": {
                        "top": "2.895rem",
                        "bottom": "0.526rem"
                    }
                }
            },
            "h1": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--h-1)",
                    "lineHeight": "1.3",
                    "fontWeight": "600",
                    "letterSpacing": "1px"
                },
                "spacing": {
                    "margin": {
                        "top": "6.316rem"
                    }
                }
            },
            "h2": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--h-2)"
                }
            },
            "h3": {
                "typography": {
                    "fontSize": "var(--wp--preset--font-size--h-3)"
                }
            },
            "link": {
                "color": {
                    "text": "var(--wp--preset--color--link)"
                }
            }
        }
    },
    "customTemplates": [],
    "templateParts": [],
    "patterns": []
}